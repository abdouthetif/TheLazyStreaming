{% extends 'base.html.twig' %}

{%  block stylesheets %}
    {{ parent() }}

    <!-- CSS -->
    <link rel="stylesheet" href="{{ asset('css/stylesSearch.css') }}">
{% endblock %}

{% block title %}Lancez une recherche{% endblock %}

{% block body %}
    <div class="container">
        <main>

            <!-- Title -->
            <div class="titrePage">

                <img src="{{ asset('assets/Logos/TheLazyStreaming.png') }}" alt="" width="130">

            </div>

            <!-- Signup Form -->
            {{ form_start(form, {'action': path('search.resultDisplay'), 'method': 'POST'}) }}

            <div>
                {{ form_label(form.genre) }}
                <small>{{ form_help(form.genre) }}</small>
                {{ form_widget(form.genre) }}
                {{ form_errors(form.genre) }}
            </div>

            <hr>

            <div class="row">
                <div class="col-4">
                    <span class="titreLabel" id="type">Type :</span>
                </div>

                <div class="col-4">
                    {{ form_label(form.movie) }}
                    {{ form_widget(form.movie) }}
                    {{ form_errors(form.movie) }}
                </div>

                <div class="col-4">
                    {{ form_label(form.serie) }}
                    {{ form_widget(form.serie) }}
                    {{ form_errors(form.serie) }}
                </div>
            </div>

            <hr>

            <div>
                {{ form_label(form.rating) }}
                <small>{{ form_help(form.rating) }}</small>
                {{ form_widget(form.rating) }}
                <datalist id="tickmarks">
                    <option value="0" label="0"></option>
                    <option value="1" label="1,0"></option>
                    <option value="2" label="2,0"></option>
                    <option value="3" label="3,0"></option>
                    <option value="4" label="4,0"></option>
                    <option value="5" label="5,0"></option>
                    <option value="6" label="6,0"></option>
                    <option value="7" label="7,0"></option>
                    <option value="8" label="8,0"></option>
                    <option value="9" label="9,0"></option>
                    <option value="10" label="10,0"></option>
                </datalist>
                {{ form_errors(form.rating) }}
            </div>

            <hr>

            <div>
                {{ form_label(form.year) }}
                <small>{{ form_help(form.year) }}</small>
                {{ form_widget(form.year) }}
                {{ form_errors(form.year) }}
            </div>

            <div>
                {{ form_label(form.keyword) }}
                <small>{{ form_help(form.keyword) }}</small>
                {{ form_widget(form.keyword) }}
                {{ form_errors(form.keyword) }}
            </div>

            <div>
                <button type="submit" class="btn" id="enregistrer">Lancer la recherche</button>
            </div>

            {{ form_end(form) }}

            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                <!-- Login link -->
                <a href="{{ path('user.signup') }}">Vous nâ€™avez pas de compte ? Inscrivez-vous c'est 100% gratuit!</a>
            {% endif %}
        </main>
    </div>
{% endblock %}
