{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <!-- Title -->
        <div class="titrePage">

            <img src="./assets/Logos/TheLazyStreamingHorizontal.png" alt="" width="130">

            <small>Saisissez le code pour la recuperation de compte re√ßu par mail</small>
            <h1>Saisissez le code</h1>
            <div class="barreJaune"></div>
        </div>

        <!-- Formulaire Mot de passe oublie -->
        {{ form_start(form) }}
        <form action="">

            <div>
                <input type="number"  placeholder="Example. 8542" min="0000" max="9999"><br>
            </div>

            <div>
                {{ form_widget(form) }}
                <button type="button" class="btn" id="enregistrer" value="Envoyer">Envoyer</button>
            </div>

        </form>
        {{ form_end(form) }}

        {% for message in app.flashes('denied') %}
            <div class="alert alert-danger mt-3" role="alert">{{ message }}</div>
        {% endfor %}

    </div>

{% endblock %}